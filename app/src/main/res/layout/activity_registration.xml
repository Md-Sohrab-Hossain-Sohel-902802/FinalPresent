<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
       <TextView
           android:layout_centerInParent="true"
           android:id="@+id/jusetText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold|italic"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fil Up this Form"
        />
    <EditText
        android:layout_centerInParent="true"
        android:layout_below="@+id/jusetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_usernameEdittextid"
        android:background="@drawable/edittext_background"
        android:hint="Enter your Name"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="10dp"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        />
       <EditText
           android:layout_below="@+id/reg_usernameEdittextid"
           android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_emailEdittextid"
        android:background="@drawable/edittext_background"
        android:hint="Enter your Email"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:layout_below="@+id/reg_emailEdittextid"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_passwordEdittext"
        android:background="@drawable/edittext_background"
        android:hint="Enter a Password"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="10dp"
        android:inputType="numberPassword"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:textColor="#fff"
        android:background="@drawable/button_background"
        android:layout_below="@id/reg_passwordEdittext"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_createaccountButtonid"
        android:text="Create"
        android:textSize="20sp"

        />
    <Button
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/reg_createaccountButtonid"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background2"
        android:id="@+id/reg_loginbuttonid"
        android:text="Login"
        android:textSize="18sp"
        />

   </RelativeLayout>